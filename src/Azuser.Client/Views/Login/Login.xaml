<UserControl x:Class="Azuser.Client.Views.Login.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Azuser.Client.Views.Login"
             xmlns:helpers="clr-namespace:Azuser.Client.Helpers"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             d:DataContext="{d:DesignInstance local:LoginViewModel}">

    <Grid Background="{DynamicResource AccentBaseColorBrush}">
        <Grid Margin="5"
              MinWidth="450"
              VerticalAlignment="Center"
              HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0"
                       Grid.Column="0"
                       Grid.ColumnSpan="2"
                       Text="Login"
                       VerticalAlignment="Center"
                       Margin="5"
                       FontSize="18"
                       FontWeight="DemiBold"
                       Foreground="{DynamicResource IdealForegroundColorBrush}" />

            <TextBlock Grid.Row="1"
                       Grid.Column="0"
                       Text="Server address"
                       VerticalAlignment="Center"
                       Margin="5"
                       Foreground="{DynamicResource IdealForegroundColorBrush}" />

            <TextBox Grid.Row="1"
                     Grid.Column="1"
                     Margin="5"
                     VerticalAlignment="Center"
                     x:Name="ServerAddressTextBox"
                     Text="{Binding ServerAddress, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />

            <TextBlock Grid.Row="2"
                       Grid.Column="0"
                       Text="Username"
                       VerticalAlignment="Center"
                       Margin="5"
                       Foreground="{DynamicResource IdealForegroundColorBrush}" />

            <TextBox Grid.Row="2"
                     Grid.Column="1"
                     Margin="5"
                     VerticalAlignment="Center"
                     x:Name="UsernameTextBox"
                     Text="{Binding Username, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />

            <TextBlock Grid.Row="3"
                       Grid.Column="0"
                       Text="Password"
                       VerticalAlignment="Center"
                       Margin="5"
                       Foreground="{DynamicResource IdealForegroundColorBrush}" />

            <PasswordBox Grid.Row="3"
                         Grid.Column="1"
                         Margin="5"
                         VerticalAlignment="Center"
                         x:Name="PasswordBox"
                         helpers:PasswordHelper.Attach="True"
                         helpers:PasswordHelper.Password="{Binding Password, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />

            <Grid Grid.Row="4"
                  Grid.Column="0"
                  Grid.ColumnSpan="2"
                  Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <CheckBox Grid.Column="0"
                          Content="Remember me"
                          Margin="5"
                          Foreground="{DynamicResource IdealForegroundColorBrush}"
                          IsChecked="{Binding RememberServerAndUsername, UpdateSourceTrigger=PropertyChanged}" />

                <Button Grid.Column="1"
                        Content="Login"
                        Margin="5"
                        IsDefault="True"
                        Width="150"
                        HorizontalAlignment="Right"
                        Command="{Binding LoginCommand}" />
            </Grid>
        </Grid>
    </Grid>
</UserControl>